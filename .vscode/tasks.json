    {
      "label": "Run UserService Integration Test",
      "type": "shell",
      "command": "node",
      "args": ["src/tests/integration/services/user-service.integration.js"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
