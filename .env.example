# Environment Configuration Examples
# Copy this file to .env.local, .env.dev, or .env.prod and update values

# AWS Cognito Configuration
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=your-user-pool-id-here
COGNITO_USER_POOL_CLIENT_ID=your-user-pool-client-id-here

# API Configuration
API_URL=http://localhost:3000/api
AUTH_URL=http://localhost:3000/api/auth
WS_URL=ws://localhost:3000

# Development Settings
ENABLE_LOGGING=true
ENABLE_DEBUG_INFO=true
LOG_LEVEL=debug

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_FEATURE_FLAGS=true

# Authentication Settings
TOKEN_REFRESH_BUFFER=300000
SESSION_TIMEOUT=3600000
ENABLE_REMEMBER_ME=true

# UI Settings
ENABLE_THEME_TOGGLE=true
DEFAULT_THEME=light
ENABLE_ANIMATIONS=true
SHOW_DEBUG_PANEL=true

# Company Information
COMPANY_NAME="Northern Pacific Technologies, LLC"
COPYRIGHT_YEAR=2025
